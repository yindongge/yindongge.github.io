<div class="mask "></div>
<script type="text/javascript">
	$(function(){
		$('.nav.thirdnav a').click(function(e){
			$('body').css({"overflow-y":"hidden"});
			$('.box').css({"z-index":'auto'});
			var T=$(this);
			if(	T.next('.slidedown-box').is(":visible"))
			{
					T.next('.slidedown-box').hide();
			}
			else{
					T.next('.slidedown-box').slideDown('slow').siblings('.slidedown-box').hide();
				}
			if(	T.hasClass('active'))
			{
					T.removeClass('active')
			}
			else{
					T.addClass('active').siblings('.nav.thirdnav a').removeClass('active')
			}
			$('.mask').fadeIn("slow").addClass('mask-top');
			e.preventDefault();
		})
	})
</script>
