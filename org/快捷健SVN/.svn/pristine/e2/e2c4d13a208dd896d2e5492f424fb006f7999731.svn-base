		$('.aside').removeClass('moved');
	});
</script>

<script type="text/javascript">
$(function(){
	$('.a').click(function(){
		// 
		var x=$(this).children('.glyphicon').eq(0).hasClass('red');
		var y=$(this).children('.glyphicon').eq(1).hasClass('red');
		if(	!x && !y)
		{
			$(this).find('.glyphicon-triangle-top').addClass('red');
		}
		if(x)
		{	
			$(this).find('.glyphicon-triangle-top').removeClass('red');
			$(this).find('.glyphicon-triangle-bottom').addClass('red');
		}
		if(y)
		{	
			$(this).find('.glyphicon-triangle-bottom').removeClass('red');
			$(this).find('.glyphicon-triangle-top').addClass('red');
		}
		$(this).siblings('.a').find('.glyphicon').removeClass('red');
	})
});
	$('.z-title').click(function(){
		$(this).toggleClass('active');
	})

</script>
