
<div class="blackmask hide" id="onloadingDiv"><img src="${ctx }/img/load2.gif" alt="" class="loadinggif" /></div>
<script type="text/javascript">
$(function(){	
	$('a').click(function(){
		if(this.href != 'javascript:void(0);'){
			$("#onloadingDiv").removeClass('hide');
			setTimeout(function(){
				$("#onloadingDiv").addClass('hide');
			},15000);
		}		    		
	});
});
</script>